    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Category</th>
        <th>Description</th>
        <th></th>
        <th></th>

    </tr>

    @for(int i=0; i < Model.Item1.ToList().Count; i++)
     {
     <tr>
        <td>@Html.DisplayFor(modelitem => Model.Item1.ToList()[i].Name)</td>
