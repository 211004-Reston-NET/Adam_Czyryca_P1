@{


    ProductVM prod = (ProductVM)ViewData["prodInLineItem"];
}
@model TTGWebUI.Models.LineItemVM

<h1 class="display-4">Delete Inventory Item</h1>
<h3>Confirm Delete</h3>

<table class=" table table-striped table-hover">
    <tr>
        <td class="text-center">Id</td>
        <td class="text-center">Name</td>
        <td class="text-center">Quantity</td>
        <td class="text-center">Price</td>
        <td class="text-center">Description</td>
        <td class="text-center">Category</td>
    </tr>
    <tr>

        <td>@Html.DisplayFor(model => model.Id)</td>
        <td>@prod.Name</td>
        <td>@Html.DisplayFor(model => model.Quantity)</td>
        <td>@prod.Price</td>
        <td>@prod.Description</td>
        <td>@prod.Catagory</td>
        <br />

    </tr>
    <tr>
    </tr>
</table>
<!--need a form to do a post request. type hidden so cust doesnt have to enter the id-->
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
</form>

