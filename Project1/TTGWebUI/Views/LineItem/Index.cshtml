@{
}
@model IEnumerable<TTGWebUI.Models.LineItemVM>
<h1>Store Inventory</h1>
<a class=" btn btn-primary text-white" asp-controller="LineItem" asp-action="create">Add Item</a>
<br /> <!-- br os like\n -->
<br />
<table class=" table table-striped table-hover">
    <tr>
        <th>Id</th>
        <th>Quantity</th>
        <th>Product Id</th>
        <th>Store Id</th>
    </tr>
    @foreach (LineItemVM item in Model)
    {
        <tr>
             <td>@Html.DisplayFor(modelitem => item.Id)</td>
            <td>@Html.DisplayFor(modelitem => item.Quantity)</td>
            <td>@Html.DisplayFor(modelitem => item.Product)</td>
            <td>@Html.DisplayFor(modelitem => item.Store)</td>
        </tr>
    }
</table>