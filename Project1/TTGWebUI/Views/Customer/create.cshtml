@model TTGWebUI.Models.CustomerVM



<h1 class="display-5">Create Customer</h1>

<form asp-action="Create">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" type="text" class="form-control"/>
    </div>
    <div class="mb-3">
        <label asp-for="Address" class="form-label">Address</label>
        <input asp-for="Address"type="text" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="EmailPhone" class="form-label">Email/phone</label>
        <input asp-for="EmailPhone" type="text" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary" value="Create">Submit</button>
