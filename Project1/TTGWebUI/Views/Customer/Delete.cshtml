@{
}
@model TTGWebUI.Models.CustomerVM

<h1 class="display-4">Delete Customer</h1>
<h3>Confirm Delete</h3>

<div>
    <dl>
        <dt>
            Id:
            <span class="col-sm-11" style="font-weight: normal;">@Html.DisplayFor(model => model.Id)</span>
        </dt>
        <dt>
            Name:
            <span class="col-sm-11" style="font-weight: normal;">@Html.DisplayFor(model => model.Name)</span>
        </dt>
        <dt>
            Address:
            <span class="col-sm-11" style="font-weight: normal;">@Html.DisplayFor(model => model.Address)</span>
        </dt>
        <dt>
            Email/Phone:
            <span class="col-sm-11" style="font-weight: normal;">@Html.DisplayFor(model => model.EmailPhone)</span>
        </dt>

        <!--need a form to do a post request. type hidden so cust doesnt have to enter the id-->
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id"/>
            <input type="submit" value="Delete" class="btn btn-danger"/>
        </form>
    </dl>
</div>