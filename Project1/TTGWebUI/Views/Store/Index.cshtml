@{
}
@model IEnumerable<TTGWebUI.Models.StoreVM>
<h1>List of Store Fronts</h1>

<a class=" btn btn-primary text-white" asp-controller="Store" asp-action="create">Add Store</a>

<br /> <!-- br os like\n -->
<br />
<table class=" table table-striped table-hover">
    <tr>
        <th class="text-center">Name</th>
        <th class="text-center">Address</th>
        <th class="text-center"></th>
    </tr>

    @foreach (StoreVM store in Model)
    {
        <tr>
            <td class="text-center">@Html.DisplayFor(modelItem => store.Name)</td>
            <td class="text-center">@Html.DisplayFor(modelItem => store.Address)</td>
            <td class="text-center">
                <div class="dropdown">
                    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Inventory
                    </button>
                    <div class="dropdown-menu">
                        <button class="dropdown-item" type="button">@Html.ActionLink("View", "Inventory", "LineItem", new { p_storeId = store.Id }, new { @style = "color:black;" })</button>
                        <button class="dropdown-item" type="button">@Html.ActionLink("Add", "Create", "LineItem", new { p_storeId = store.Id }, new { @style = "color:black;" })</button>
                    </div>
                </div>
                <!--
                <button class="btn btn-info">Html.ActionLink("Inventory", "Inventory", "LineItem", new { p_storeId = store.Id }, new { style = "color:white;" })</button>
                -->
            </td>
        </tr>

    }

</table>