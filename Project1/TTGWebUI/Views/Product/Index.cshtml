@{
}
@model IEnumerable<TTGWebUI.Models.ProductVM>
<h1>List of Products</h1>
<!--
<a class=" btn btn-primary text-white" asp-controller="Customer" asp-action="create">Add Customer</a>
-->
<br /> <!-- br os like\n -->
<br />
<table class=" table table-striped table-hover">
    <tr>
        <th class="text-center">Name</th>
        <th class="text-center">Price</th>
        <th class="text-center">Description</th>
        <th class="text-center">Catagory</th>
    </tr>

    @foreach (ProductVM prod in Model)
    {
        <tr>
            <td class="text-center">@Html.DisplayFor(modelItem => prod.Name)</td>
            <td class="text-center">$@prod.Price.ToString("F")</td>
            <td class="text-center">@Html.DisplayFor(modelItem => prod.Description)</td>
            <td class="text-center">@Html.DisplayFor(modelItem => prod.Catagory)</td>
        </tr>
    }

    </table>
